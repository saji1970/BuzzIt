# OCI Deployment Configuration
# Copy this file to .env and fill in your values

# OCI Instance Details
OCI_REMOTE_HOST=your-instance-public-ip-here
OCI_REMOTE_USER=opc
OCI_SSH_KEY_PATH=~/.ssh/id_rsa

# OCI Resource IDs (optional, for advanced features)
OCI_COMPARTMENT_ID=ocid1.compartment.oc1..xxxxx
OCI_INSTANCE_ID=ocid1.instance.oc1.iad.xxxxx

# Application Configuration
NODE_ENV=production
PORT=3000

# Optional: Twilio Configuration (for SMS verification)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Optional: JWT Secret (for production)
JWT_SECRET=your-super-secret-jwt-key-for-production
